<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <bean id="dataSource" class="de.mhus.osgi.commands.db.DelegateDataSource">
        <property name="source" value="jdbc/db_datasourcename"/>
		<property name="context" ref="blueprintBundleContext" />
    </bean>

    <service interface="javax.sql.DataSource" ref="dataSource">
        <service-properties>
            <entry key="osgi.jndi.service.name" value="reactive-storage"/>
        </service-properties>
    </service>
</blueprint>
